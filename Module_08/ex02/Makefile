CXX = g++
CXXFLAGS = -Wall -Wextra -Werror -std=c++98

TARGET = my_program

SRCS = main.cpp 
OBJS = $(SRCS:.cpp=.o)

all: $(TARGET)

$(TARGET): $(OBJS)
	$(CXX) $(CXXFLAGS) -o $(TARGET) $(OBJS)

%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
	rm -f $(OBJS)
	
fclean:
	rm -f $(OBJS) $(TARGET)

re: clean all

.PHONY: all clean re